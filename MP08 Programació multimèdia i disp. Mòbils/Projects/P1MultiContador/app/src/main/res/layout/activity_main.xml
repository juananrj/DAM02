<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_reset_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/reset_all"
        app:layout_constraintBottom_toTopOf="@+id/masUno1"/>

    <TextView
        android:id="@+id/text_view_reset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/text_view_reset2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/masUno1"
        app:layout_constraintTop_toBottomOf="@+id/text_view_reset_all" />

    <TextView
        android:id="@+id/text_view_reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/text_view_reset3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/masUno2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_reset1" />

    <TextView
        android:id="@+id/text_view_reset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/text_view_reset4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/masUno3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_reset2" />

    <TextView
        android:id="@+id/text_view_reset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/masUno4"
        app:layout_constraintTop_toBottomOf="@+id/text_view_reset3" />

    <Button
        android:id="@+id/reset_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET ALL"
        android:backgroundTint="@color/reset_all"
        app:layout_constraintBottom_toTopOf="@+id/reset1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_reset_all"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/reset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/reset"
        android:text="RESET"
        app:layout_constraintBottom_toTopOf="@+id/reset2"
        app:layout_constraintLeft_toRightOf="@+id/masUno1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_all"/>

    <Button
        android:id="@+id/reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:backgroundTint="@color/reset"
        app:layout_constraintBottom_toTopOf="@+id/reset3"
        app:layout_constraintLeft_toRightOf="@+id/masUno2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset1"/>

    <Button
        android:id="@+id/reset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:backgroundTint="@color/reset"
        app:layout_constraintBottom_toTopOf="@+id/reset4"
        app:layout_constraintLeft_toRightOf="@+id/masUno3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset2"/>

    <Button
        android:id="@+id/reset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:backgroundTint="@color/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/masUno4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset3"/>

    <Button
        android:id="@+id/masUno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/masUno"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/masUno2"
        app:layout_constraintLeft_toRightOf="@+id/text_view_reset1"
        app:layout_constraintRight_toLeftOf="@+id/reset1"
        app:layout_constraintTop_toBottomOf="@+id/reset_all"/>

    <Button
        android:id="@+id/masUno2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/masUno"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/masUno3"
        app:layout_constraintLeft_toRightOf="@+id/text_view_reset2"
        app:layout_constraintRight_toLeftOf="@+id/reset2"
        app:layout_constraintTop_toBottomOf="@+id/reset1"/>

    <Button
        android:id="@+id/masUno3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/masUno"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/masUno4"
        app:layout_constraintLeft_toRightOf="@+id/text_view_reset3"
        app:layout_constraintRight_toLeftOf="@+id/reset3"
        app:layout_constraintTop_toBottomOf="@+id/reset2"/>

    <Button
        android:id="@+id/masUno4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/masUno"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text_view_reset4"
        app:layout_constraintRight_toLeftOf="@+id/reset4"
        app:layout_constraintTop_toBottomOf="@+id/reset3"/>

</androidx.constraintlayout.widget.ConstraintLayout>